%html{ :lang => 'en' }
  = render "_header"
  %body{:onload => "prettyPrint()" }
    .container
      = render "_navigation"
      .row
        %div{"class" => "seven columns centered"}
          = render "_title"
          %article
            %section
              %header
                %a{:href => relative_path_to(@item) }
                  %h2
                    = "#{@item[:title]}"
            = yield
    = google_analytics @site.config[:site][:analytics_token]
