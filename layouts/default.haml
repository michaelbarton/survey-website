%html{ :lang => 'en' }
  = render "_header"
  %body.bp{:onload => "prettyPrint()" }
    .container
      .page-header
        = render "_title"
      .content
        %article
          %section
            %header
              %a{:href => relative_path_to(@item) }
                %h2
                  = "#{@item[:title]}"
          ~ yield
    = google_analytics @site.config[:site][:analytics_token]
